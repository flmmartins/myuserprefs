########Jump between hosts from one ssh to another#####
Host firstjump
    Hostname <a hostname>
    User fmartins

Host secondjump
    ProxyCommand /usr/bin/ssh -q firstjump /usr/bin/nc finalhostname.com 22

####### Set specific ssh for a repo and leave default untouched
# Generate sshkey normally and change its path (aka name)
# Do a ssh-add <path to key>. Check with ssh-add -l
# Change your git config locally or globally

#Bind ssh key with host
Host <a host>
    Hostname <a host>
    user git
    PreferredAuthentications publickey
    Port 22
    IdentityFile /Users/fmartins/.ssh/<a private key>
    IdentitiesOnly yes
